<h3>Produkt: <%= @product.name %></h3>
<h4>Numenr klienta: <%= @product.customer_id_number %></h4>
<h4>Wewnętrzny numer: <%= @product.internal_id_number %></h4>
<h4>Kolor: <%= @product.color %></h4>
<h4>Ilość na palecie: <%= @product.quantity_on_palet %></h4>
<%= link_to  "Wróć do listy produktów", products_path, class: "btn btn-success" %>
<hr>

<h3>Lista elementów</h3>
<% if user_signed_in? %>
<%= link_to  "Dodaj element", add_element_product_path(@product.id), class: "btn btn-primary" %>
<% else %>
Zaloguj się by dodać elementy
<% end %>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Nazwa elementu</th>
            <th>Numer swing</th>
            <th>Ilość na komplet</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        <% @product.elements.each do |element| %>
            <tr>
                <td><%= element.id %></td>
                <td><%= element.name %></td>
                <td><%= element.internal_id_number %></td>
                <td><%= element.quantity_per_set %></td>
                <td>
                    <%= link_to  "Pokaż", element_path(element), class: "btn btn-default btn-xs" %>
                    <% if user_signed_in? %>
                        <%= link_to  "Edytuj", edit_element_path(element), class: "btn btn-primary btn-xs" %>
                        <%= link_to  "Usuń", element_path(element), method: :delete, class: "btn btn-danger btn-xs" %>
                    <% end %>
            </td>
            </tr>
        <% end %>
    </tbody>
</table>

